{% extends 'GrtResBundle::layout.html.twig' %}

{% block namepage %}
    <h3>
        Список отделов
    </h3>
{% endblock %}

{% block body %}

    {% if departments %}
        <table class="table table-striped table-hover">
            {% block table_header %}
            <thead>
                <tr>
                    <th>#</th>
                    <th>Название отдела</th>
                    <th>Action</th>
                </tr>
            </thead>
            {% endblock %}
            {% block table_body %}
            <tbody>
            {% for department in departments %}
                <tr>
                    <td scope="row">{{ loop.index }}</td>
                    <td>{{ department.name }}</td>
                    <td>
                        <a href="{{ path('grt_show_users_department', { 'departmentId': department.id }) }}" title="{% trans %}Show users in this base{% endtrans %}">
                            <i class="fa fa-users" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            {% endblock %}
        </table>
    {% else %}
        <p>{% trans %}There are no users{% endtrans %}</p>
    {% endif %}



{% endblock %}
