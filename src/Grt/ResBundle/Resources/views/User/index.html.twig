                    <th colspan="2">{% trans %}Action{% endtrans %}</th>
                </tr>
            </thead>
            {% endblock %}
            {% block table_body %}
            <tbody>
                {% for user in users %}
                    <tr>
                        <td scope="row">{{ loop.index }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.middlename }}</td>
                        <td>{{ user.department }}</td>
                        <td>{{ user.location }}</td>
                        <td>
                            <a href="{{ path('grt_user_show', { 'userId': user.id }) }}" title="{% trans %}Show user info{% endtrans %}">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('grt_edit_user', { 'userId': user.id }) }}" title="{% trans %}Edit user{% endtrans %}">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            {% endblock %}
        </table>
    {% else %}
        <p>{% trans %}There are no users{% endtrans %}</p>
    {% endif %}


    {% if maxPages > 1 %}
        <div class="paginator">
            <div class="row">
                <ul class="pagination pagination-sm">
                    {# `«` arrow  #}
                    <li {{ thisPage == 1 ? 'class="disabled"' }}>
                        <a href="{{ path('grt_users', {page: thisPage-1 < 1 ? 1 : thisPage-1}) }}">«</a>
                    </li>

                    {# Render each page number #}
                    {% for i in 1..maxPages %}
                        <li {{ thisPage == i ? 'class="active"' }}>
                            <a href="{{ path('grt_users', {page: i}) }}">{{ i }}</a>
                        </li>
                    {% endfor %}

                    {# `»` arrow #}
                    <li {{ thisPage == maxPages ? 'class="disabled"' }}>
                        <a href="{{ path('grt_users', {page: thisPage+1 <= maxPages ? thisPage+1 : thisPage}) }}">»</a>
                    </li>
                </ul>
            </div>
        </div>
    {% endif %}



{% endblock %}
