                                    <i class="fa fa-chevron-down" aria-hidden="true"></i>
                                </a>
                            {% endif %}
                        </span>
                    </th>
                    <th>Отдел
                        <span>
                            {% if app.request.get('departmentId') or app.request.get('locationId')  %}
